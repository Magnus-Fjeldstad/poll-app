# ==== BUILD STAGE ====
FROM gradle:8.8-jdk21 AS build
WORKDIR /app

COPY --chown=gradle:gradle . .

RUN gradle bootJar --no-daemon

FROM eclipse-temurin:21-jre

RUN useradd spring
USER spring

WORKDIR /app

COPY --from=build /app/build/libs/*.jar app.jar

EXPOSE 8080

CMD ["java", "-jar", "app.jar"]
