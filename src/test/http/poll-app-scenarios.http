### 1) Create user 1
# @name createUser1
POST {{host}}/api/users
Content-Type: {{json}}

{
  "username": "alice",
  "email": "alice@example.com"
}

> {%
    const body = (typeof response.body === 'object') ? response.body : JSON.parse(response.body);
    client.global.set("user1Id", body.id);
    client.assert(!!body.id, "user1Id missing");
%}

